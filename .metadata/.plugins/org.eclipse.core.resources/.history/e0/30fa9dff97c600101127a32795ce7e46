package com.example;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ConfigurableApplicationContext;

@SpringBootApplication
public class SpringMaven {
	public static void main(String[] args) {
//		SpringApplication.run(SpringMaven.class, args);
//		System.out.println("Welcome");
		
		ConfigurableApplicationContext ctx=SpringApplication.run(SpringMaven.class, args);
		Bean b=ctx.getBean(Bean.class);
		b.setEid(1);
		b.setName("PK");
		b.setEsal(30000);
		System.out.println(b.getEid()+" "+b.getName()+" "+b.getEsal());
		
		Bean b1=ctx.getBean(Bean.class);
		b1.setEid(1);
		b1.setName("PK");
		b1.setEsal(30000);
		System.out.println(b1.getEid()+" "+b1.getName()+" "+b1.getEsal());
	}

}
