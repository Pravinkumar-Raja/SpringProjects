package com.example.demo.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.bean.StudentBean;
import com.example.demo.bean.UserCredentials;
import com.example.demo.service.AdminService;

@Controller
@RequestMapping("/admin")
public class AdminController {
	
	@Autowired
	private AdminService adserv;
	
	@PostMapping("/addUser")
	public String methu(@RequestBody UserCredentials uc)
	{
		return "<h1>"+adserv.addUser(uc)+" user added successfully ... </h1>";
	}
	
	@PostMapping("/user")
	public String meth(@RequestBody UserCredentials uc)
	{
		if(uc.getUser().equals("AD-001")&&uc.getPass().equals("AD-001"))
		{
			return "return:/admin/userData";
		}
		else
		{
			return "Invalid User";
		}
	}
	@PostMapping("/userData")
	@ResponseBody
	public String meth7()
	{
		return "<h1> Welcome to Admin Login </h1>";
	}
	
	@PostMapping("/addStudent")
	public String meth1(@RequestBody StudentBean sb)
	{
		return "<h1>"+adserv.addStudent(sb)+" record added successfully ... </h1>";
	}
	
	@PutMapping("/updateStudent")
	public String meth2(@RequestBody StudentBean sb)
	{
		return  "<h1>"+adserv.updateStudent(sb)+" record updated successfully ... </h1>";
	}
	
	@DeleteMapping("/deleteStudent/{rollno}")
	public String meth3(@PathVariable("rollno")int rollno)
	{
		int i=adserv.deleteStudent(rollno);
		return "<h1>"+i+" record deleted successfully....</h1>";
		
	}
	
	@GetMapping("/selectAll")
	public List<StudentBean> meth4()
	{
		return adserv.selectAll();
	}

}

