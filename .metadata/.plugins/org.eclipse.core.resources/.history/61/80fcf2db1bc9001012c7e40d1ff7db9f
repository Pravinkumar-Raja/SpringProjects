package com.example.demo;

import java.sql.Date;
import java.text.ParseException;
import java.text.SimpleDateFormat;

import org.eclipse.jdt.internal.compiler.parser.Scanner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ConfigurableApplicationContext;
import org.springframework.web.context.ConfigurableWebApplicationContext;

import com.example.demo.bean.DoctorBean;
import com.example.demo.bean.PatientBean;
import com.example.demo.service.DoctorService;

@SpringBootApplication
public class SpringWebApplication {

	public static void main(String[] args) {
		
//		SpringApplication.run(SpringWebApplication.class, args);
		ConfigurableApplicationContext ctx=SpringApplication.run(SpringWebApplication.class, args);
		DoctorBean db=ctx.getBean(DoctorBean.class);
		DoctorService ds=ctx.getBean(DoctorService.class);
		SimpleDateFormat sdf=new SimpleDateFormat("yyyy-MM-dd");
		
		db.setDoctorID(101);
		db.setDoctorName("Pravinkumar");
		String d="2004-06-20";
		java.util.Date dob=null;
		try {
			dob = sdf.parse(d);
		} catch (ParseException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		db.setDateOfBirth(dob);
		java.util.Date dob1=null;
		String birth="2022-12-26";
		try {
			dob1=sdf.parse(birth);
		} catch (ParseException e) {
			e.printStackTrace();
		}
		
		db.setDateOfJoining(dob1);
		db.setGender("Male");
		db.setQualification("MBBS");
		db.setSpecialization("Cardiology");
		db.setExperience(3);
		db.setStreet("1st Cross Street");
		db.setLocation("India");
	}

}
